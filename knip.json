{
  "entry": [
    "src/main.ts",
    "test/**/*.ts"
  ],
  "project": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "ignoreBinaries": ["dot"],
  "ignoreExportsUsedInFile": true,
  "rules": {
    "files": "error",
    "dependencies": "error",
    "unlisted": "error",
    "exports": "error",
    "types": "error",
    "enumMembers": "error",
    "classMembers": "error",
    "duplicates": "error"
  }
}
