{
  "name": "whale-alert-bot",
  "version": "0.1.4",
  "description": "Telegram whale alert bot on NestJS",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "cross-env NODE_ENV=production nest start --env-file .env",
    "start:dev": "cross-env NODE_ENV=development nest start --watch --env-file .env.dev.local",
    "start:test": "cross-env NODE_ENV=test nest start --env-file .env.test.local",
    "start:prod": "cross-env NODE_ENV=production node --env-file=.env dist/src/main.js",
    "lint": "eslint \"{src,test,scripts}/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"{src,test,scripts}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"{src,test,scripts}/**/*.ts\"",
    "format:write": "prettier --write \"{src,test,scripts}/**/*.ts\"",
    "db:info": "tsx scripts/db/info.ts",
    "db:validate": "tsx scripts/db/validate.ts",
    "db:migrate": "tsx scripts/db/migrate.ts",
    "release:notes": "tsx scripts/release/send-release-notes.ts",
    "smoke:solana": "tsx scripts/smoke/solana-rpc-smoke.ts",
    "build:test": "tsc -p tsconfig.test.json",
    "find-dead-code": "npx knip",
    "check": "npm run lint && npm run db:validate && npm run typecheck && npm run test && npm run build",
    "precommit": "npm run lint:fix && npm run format:write && npm run lint && npm run lint:boundaries && npm run lint:circular && npm run typecheck && npm run find-dead-code && npm run test && npm run test:scenario && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:telegram:harness": "vitest run src/modules/telegram/bot/testing/local-bot-harness.spec.ts",
    "test:e2e": "npm run build:test && vitest run --config vitest.e2e.config.ts",
    "test:scenario": "vitest run --config vitest.scenario.config.ts",
    "prepare": "husky",
    "lint-staged": "lint-staged --concurrent false",
    "madge": "madge --circular --extensions ts src/",
    "madge:image": "madge --image graph.png --extensions ts src/",
    "depcruise": "depcruise src --output-type dot | dot -T svg > deps.svg",
    "depcruise:html": "depcruise src --output-type html > deps.html",
    "arch:check": "npm run madge && npm run lint -- --rule 'boundaries/element-types: error'",
    "arch:visualize": "npm run madge:image && npm run depcruise",
    "lint:boundaries": "eslint --plugin boundaries --rule 'boundaries/element-types: error' src/",
    "lint:circular": "madge --circular --extensions ts --no-color --no-spinner src/ || (echo '❌ Циклические зависимости найдены! Запусти npm run madge:image для визуализации' && exit 1)",
    "lint:madge": "madge --extensions ts src/ --json > madge-report.json",
    "lint:depcruise": "depcruise src --output-type err-long",
    "depcruise:svg": "depcruise src --output-type dot | dot -T svg > deps.svg",
    "audit:fast": "npm run lint && npm run lint:circular",
    "audit:full": "npm run lint && npm run lint:boundaries && npm run lint:circular && npm run depcruise:json",
    "deploy": "bash scripts/deploy.sh"
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.ts": [
      "eslint --max-warnings 0",
      "prettier --check"
    ],
    "*.ts": [
      "prettier --check"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.6",
    "bottleneck": "^2.19.5",
    "ethers": "^6.15.0",
    "kysely": "^0.28.5",
    "nestjs-telegraf": "^2.9.1",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "postgrator": "^8.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "dependency-cruiser": "^16.9.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "^16.1.5",
    "madge": "^8.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.2.4"
  }
}
