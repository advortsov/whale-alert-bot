{
  "name": "whale-alert-bot",
  "version": "0.1.0",
  "description": "Telegram whale alert bot on NestJS",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start":    "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint \"{src,test,scripts}/**/*.ts\" --max-warnings 0",
    "lint:fix": "eslint \"{src,test,scripts}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"{src,test,scripts}/**/*.ts\"",
    "format:write": "prettier --write \"{src,test,scripts}/**/*.ts\"",
    "db:info": "tsx scripts/db/info.ts",
    "db:validate": "tsx scripts/db/validate.ts",
    "db:migrate": "tsx scripts/db/migrate.ts",
    "release:notes": "tsx scripts/release/send-release-notes.ts",
    "smoke:solana": "tsx scripts/smoke/solana-rpc-smoke.ts",
    "build:test": "tsc -p tsconfig.test.json",
    "check": "npm run lint && npm run db:validate && npm run typecheck && npm run test && npm run build",
    "precommit": "npm run format:write && npm run lint && npm run typecheck && npm run test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:telegram:harness": "vitest run src/telegram/testing/local-bot-harness.spec.ts",
    "test:e2e": "npm run build:test && vitest run --config vitest.e2e.config.ts",
    "prepare": "husky",
    "lint-staged": "lint-staged --concurrent false"
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.ts": [
      "eslint --max-warnings 0",
      "prettier --check"
    ],
    "*.ts": [
      "prettier --check"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "ethers": "^6.15.0",
    "kysely": "^0.28.5",
    "nestjs-telegraf": "^2.9.1",
    "pg": "^8.16.3",
    "postgrator": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.2.4"
  }
}
